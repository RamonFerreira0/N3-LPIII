<div class="card">
    <h5 class="card-header">{{title}}</h5>
    <div class="card-body">
        <h5 class="card-title">Dados da Inscrição</h5>
        <a href="/form" class="btn btn-success">Adicionar</a>
        <br><br>
        {{#each cerveja}}
        <div class="card">
            <div class="card-body">
                <h5>{{ this.id }}</h5>
                <hr>
                <p>Data: {{ this.data }}</p>
                <p>Temperatura Minima: {{ this.temperaturaminima }}</p>
                <p>Temperatura Maxima {{ this.temperaturamaxima }}</p>
                <p>Precipitação: {{ this.precipitacao }}</p>
                <a href="/delete/{{ this.id }}" class="btn btn-danger"
                    onclick="return confirm('Confirma a exclusão do registro?')">Excluir</a>
                <a href="/edit/{{ this.id }}" class="btn btn-primary">Editar</a>
            </div>
        </div>
        <br>
        {{else}}
        <p>Nenhum registro encontrado!</p>
    </div>
    {{/each}}
</div>